# Dockerfile.react
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY web-client/package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY web-client/ ./

# Expose Vite dev server port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]